snippet msg Tk graphical message
	from Tkinter import Tk
	import ttk
	import tkMessageBox
	window = Tk()
	window.wm_withdraw()  # make window invisible. we only want message boxes
	ttk.Style().theme_use('clam')
	tkMessageBox.showinfo(title="${1:title}",
						  message="${2:msg}",
						  parent=window)
